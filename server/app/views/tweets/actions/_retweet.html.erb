<% if current_user.retweeted_tweets.include?(tweet.id) %>
<%= link_to 'Undo Retweet', url_for(action: :unretweet, tweet_id: tweet.id), class: "inline-block bg-blue-500 text-white text-xs px-2 py-1 rounded-full mr-2" %>
<% else %>
<%= link_to 'Retweet', url_for(action: :retweet, tweet_id: tweet.id), class: "inline-block bg-blue-500 text-white text-xs px-2 py-1 rounded-full mr-2" %>
<% end %>
